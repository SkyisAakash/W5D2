<div class="block1">
  <br>
  <h1>New Post!</h1>
  <br>
  <form action="<%=posts_url%>" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <br>
    <label>
      Title
      <input type="text" name="post[title]" value="" placeholder="Enter title">
    </label>
    <br>
    <br>
    <label>
      URL
      <input type="text" name="post[url]" value="" placeholder="Enter url">
    </label>
    <br>
    <br>
    <label>
      Content
      <input type="text" name="post[content]" value="" placeholder="Enter content">
    </label>
    <br>
    <br>

    <% @all_subs.each do |all_sub| %>
    <input type="checkbox"><%= all_sub.title %>
    <br>
    <% end %>

    <input type="submit" name="" value="Submit">

  </form>

</div>
